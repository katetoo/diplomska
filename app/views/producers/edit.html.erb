<%= render 'shared/page_title', title: "Измени група" %> 
<%= render 'shared/errors', obj: @producer %>

<div class="row">
    <div class="well col-md-10 col-md-offset-2">
        <%= form_for(@producer, html: { multipart: true }) do |f| %>
        <%= f.label :"Име на производител:" %>
        <%= f.text_field :ime_proizvoditel %>
        </br></br>
        <%= f.label :"Потекло:" %>
        <%= f.text_field :poteklo %>
        </br></br>
        <%= f.label :"Веб сајт:" %>
        <%= f.text_field :website, :size => "40" %>
        </br></br>
        <span class="picture">
            <%= f.file_field :picture, accept: 'image/jpeg, image/gif, image/png' %>
        </span>
        </br></br>
        
        <%= f.submit 'Измени', class: "btn btn-success" %>
        <% end %>
    </div>
</div>

<script type = "text/javascript">
  $('#producer_picture').bind('change', function() {
    size_in_megabytes=this.files[0].size/1024/1024;
    if (size_in_megabytes>5)
    {
      alert('Максималната големина на слика е 5MB. Ве молиме одберете помала слика.');
    }
  });
</script> 