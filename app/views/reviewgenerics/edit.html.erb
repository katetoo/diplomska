<%= render 'shared/page_title', title: "Измени коментар" %>

<%= render 'shared/errors', obj:  @genname %>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for ([@genname, @reviewgen]) do |f| %>
      <%= f.label 'Коментар' %>
      <%= f.text_area :komentar_na_generika %>
      <% if logged_in? && current_user.admin %>
            <div class="field">
                <%= f.label "Одобри" %> <br />
                <%= f.check_box :approve %> <br />
            </div>
        <% end %>
      <%= f.submit(@reviewgen.new_record? ? 'Submit' : 'Промени', class: "btn btn-success") %>
    <% end %>
  </div>
</div>