<%= render 'shared/page_title', title: "Додај нов генерички лек" %> 
<%= render 'shared/errors', obj: @generic_name %>

<div class="row">
    <div class="well col-md-8 col-md-offset-2">
        <%= form_for @generic_name do |f| %> 
        <%= f.label :"Име на лек:" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <%= f.text_field :genericko_ime, :size => "40" %></br></br>
        
        <%= f.label :"Детална поделба:" %>
        <%= f.text_field :detalna_podelba, :size => "40" %></br></br>
        
        <%= f.label :"Состав:" %>
        <%= f.text_area :sostav, :cols => "100", :rows => "10" %></br></br>
        
        <%= f.label :"Индикации:" %>
        <%= f.text_area :indikacii, :cols => "100", :rows => "10" %></br></br>
        
        <%= f.label :"Интеракции:" %>
        <%= f.text_area :interakcii, :cols => "100", :rows => "10" %></br></br>
        
        <%= f.label :"Дејство:" %>
        <%= f.text_area :dejstvo, :cols => "100", :rows => "10" %></br></br>
        
        <%= f.label :"Мерки на претпазливост:" %>
        <%= f.text_area :merki_na_pretpazlivost, :cols => "100", :rows => "10" %></br></br>
        
        <%= f.label :"Дозирање:" %>
        <%= f.text_area :doziranje, :cols => "100", :rows => "10" %></br></br>
        
        <%= f.label :"Несакани дејства:" %>
        <%= f.text_area :nesakani_dejstva, :cols => "100", :rows => "10" %></br></br>
        
        <%= f.label :"Контраиндикации:" %>
        <%= f.text_area :kontraindikacii, :cols => "100", :rows => "10" %></br></br>
        
        <strong>Поделба:</strong>
        
        <%= f.collection_select(:substitution_id, Substitution.all, :id, :ime_podelba, {:include_blank => ''}) %>

        </br></br>
        <%= f.submit 'Креирај', class: "btn btn-success pull-right" %>
        <% end %>
    </div>
</div>